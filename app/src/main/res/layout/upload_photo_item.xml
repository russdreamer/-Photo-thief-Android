<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:orientation="vertical" android:padding="5dp">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/photo_view"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" tools:scaleType="centerCrop"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/photo_cover"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" tools:scaleType="fitCenter"
            android:scaleX="1" android:background="@color/blackCover"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/refresh"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/refresh" android:scaleType="fitCenter" android:scaleX="0.5" android:scaleY="0.5"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/percentage_txt"
            app:layout_constraintTop_toTopOf="@+id/photo_view"
            app:layout_constraintBottom_toBottomOf="@+id/photo_view"
            app:layout_constraintStart_toStartOf="@+id/photo_view"
            app:layout_constraintEnd_toEndOf="@+id/photo_view" android:textColor="@android:color/white"
            android:textStyle="bold" android:textSize="36sp" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>